{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Launch EC2 - CSYE 6225 Summer 2019",
    "Parameters" : {
      "stackName":{
          "Type":"String"
      }
    },
    "Resources": {
        "myVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true",
                "InstanceTenancy": "default",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-vpc"]]} 
                    }
                ]
            }
        },
        "IPv6CidrBlock" : {
            "Type" : "AWS::EC2::VPCCidrBlock",
            "Properties" : {
              "AmazonProvidedIpv6CidrBlock" : true,
              "VpcId" : { "Ref" : "myVPC" }
            }
          },
          "subnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "DependsOn" : "IPv6CidrBlock",
            "Properties" : {
              "AvailabilityZone": "us-east-1a",
              "AssignIpv6AddressOnCreation" : true,
              "CidrBlock" : { "Fn::Select" : [ 0, { "Fn::Cidr" : [{ "Fn::GetAtt" : [ "myVPC", "CidrBlock" ]}, 3, 8 ]}]},
              "Ipv6CidrBlock" : { "Fn::Select" : [ 0, { "Fn::Cidr" : [{ "Fn::Select" : [ 0, { "Fn::GetAtt" : [ "myVPC", "Ipv6CidrBlocks" ]}]}, 3, 64 ]}]},
              "VpcId" : { "Ref" : "myVPC" },
              "Tags": [
                {
                    "Key": "Name",
                    "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-subnet1"]]}
                }
                ]
            }
          },
          "subnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "DependsOn" : "IPv6CidrBlock",
            "Properties" : {
              "AvailabilityZone": "us-east-1b",
              "AssignIpv6AddressOnCreation" : true,
              "CidrBlock" : { "Fn::Select" : [ 1, { "Fn::Cidr" : [{ "Fn::GetAtt" : [ "myVPC", "CidrBlock" ]}, 3, 8 ]}]},
              "Ipv6CidrBlock" : { "Fn::Select" : [ 1, { "Fn::Cidr" : [{ "Fn::Select" : [ 0, { "Fn::GetAtt" : [ "myVPC", "Ipv6CidrBlocks" ]}]}, 3, 64 ]}]},
              "VpcId" : { "Ref" : "myVPC" },
               "Tags": [
                {
                    "Key": "Name",
                    "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-subnet2"]]}
                }
                ]
            }
          },
          "subnet3" : {
            "Type" : "AWS::EC2::Subnet",
            "DependsOn" : "IPv6CidrBlock",
            "Properties" : {
              "AvailabilityZone": "us-east-1c",
              "AssignIpv6AddressOnCreation" : true,
              "CidrBlock" : { "Fn::Select" : [ 2, { "Fn::Cidr" : [{ "Fn::GetAtt" : [ "myVPC", "CidrBlock" ]}, 3, 8 ]}]},
              "Ipv6CidrBlock" : { "Fn::Select" : [ 2, { "Fn::Cidr" : [{ "Fn::Select" : [ 0, { "Fn::GetAtt" : [ "myVPC", "Ipv6CidrBlocks" ]}]}, 3, 64 ]}]},
              "VpcId" : { "Ref" : "myVPC" },
               "Tags": [
                {
                    "Key": "Name",
                    "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-subnet3"]]}
                }
                ]
            }
          },
          "myInternetGateway" : {
            "Type" : "AWS::EC2::InternetGateway",
            "Properties" : {
              "Tags": [
                {
                  "Key": "Name",
                  "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-internetGateway"]]}
                }
              ]
            }
         },
         "AttachGateway" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
               "VpcId" : { "Ref" : "myVPC" },
                "InternetGatewayId" : { "Ref" : "myInternetGateway" }
             }
         },
         "myRouteTable" : {
          "Type" : "AWS::EC2::RouteTable",
          "Properties" : {
             "VpcId" : { "Ref" : "myVPC" },
             "Tags": [
              {
                "Key": "Name",
                "Value": {"Fn::Join": ["",[{"Ref": "AWS::StackName"},"-csye6225-public-route-table"]]}
              }
            ]
          }
         },
         "PublicRoute" : {
          "Type" : "AWS::EC2::Route",
          "Properties" : {
             "RouteTableId" : { "Ref" : "myRouteTable" },
             "DestinationCidrBlock" : "0.0.0.0/0",
             "GatewayId" : { "Ref" : "myInternetGateway" }
          }
      },
         "Subnet1RouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "subnet1" },
               "RouteTableId" : { "Ref" : "myRouteTable" }
            }
         },
         "Subnet2RouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "subnet2" },
               "RouteTableId" : { "Ref" : "myRouteTable" }
            }
         },
         "Subnet3RouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "subnet3" },
               "RouteTableId" : { "Ref" : "myRouteTable" }
            }
         },
          "webAppSecurityGroup": {
          "Type": "AWS::EC2::SecurityGroup",
          "Properties": {
              "GroupDescription": "security group for ec2",
              "VpcId" : { "Ref" : "myVPC" },
              "SecurityGroupIngress": [
                  {
                      "IpProtocol": "tcp",
                      "FromPort": "80",
                      "ToPort": "80",
                      "CidrIp": "0.0.0.0/0"
                  },
                  {
                      "IpProtocol": "tcp",
                      "FromPort": "22",
                      "ToPort": "22",
                      "CidrIp": "0.0.0.0/0"
                  },
                  {
                      "IpProtocol": "tcp",
                      "FromPort": "443",
                      "ToPort": "443",
                      "CidrIp": "0.0.0.0/0"
                  },
                  {
                      "IpProtocol": "tcp",
                      "FromPort": "8080",
                      "ToPort": "8080",
                      "CidrIp": "0.0.0.0/0"
                  }
              ],
              "Tags": [
                  {
                      "Key": "Name",
                      "Value": "csye6225-webapps-sg"
                  }
              ]
          }
      },
      "RDSSecurityGroup":{
          "Type": "AWS::EC2::SecurityGroup",
          "Properties": {
              "GroupDescription": "security group for RDS instances",
              "VpcId" : { "Ref" : "myVPC" },
              "SecurityGroupIngress": [
                  {
                      "IpProtocol": "tcp",
                      "FromPort": "3306",
                      "ToPort": "3306",
                      "SourceSecurityGroupId": {
                        "Fn::GetAtt": [
                           "webAppSecurityGroup",
                           "GroupId"
                        ]
                     }
                  }
              ],
              "Tags": [
                  {
                      "Key": "Name",
                      "Value": "csye6225-rds-sg"
                  }
              ]
          }
      }
    },
    "Outputs": {
        "CidrBlock": {
            "Description": "The set of IP addresses for the VPC.",
            "Value": {
                "Fn::GetAtt": [
                    "myVPC",
                    "CidrBlock"
                ]
            }
        },
        "DefaultNetworkAcl": {
            "Description": "The default network ACL ID that is associated with the VPC. ",
            "Value": {
                "Fn::GetAtt": [
                    "myVPC",
                    "DefaultNetworkAcl"
                ]
            }
        },
        "DefaultSecurityGroup": {
            "Description": "The default security group ID that is associated with the VPC.",
            "Value": {
                "Fn::GetAtt": [
                    "myVPC",
                    "DefaultSecurityGroup"
                ]
            }
        }
    }
}
